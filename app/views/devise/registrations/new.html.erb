<section class="py-20 h-screen bg-slate-200">
  <div class="text-center h-full p-10">
    <h2 class="font-bold m-3 text-3xl">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="my-5">
        <%= f.text_field :name, placeholder: "your full name", autofocus: true, autocomplete: "name", class: "w-full bg-gray-100 p-2" %>
      </div>

      <div class="my-5">
        <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email", class: "w-full bg-gray-100 p-2" %>
      </div>

      <div class="my-5">
        <%= f.password_field :password, placeholder: "password (6 characters minimum)", autocomplete: "new-password", class: "w-full bg-gray-100 p-2"  %>
      </div>

      <div class="my-5">
        <%= f.password_field :password_confirmation, placeholder: "password confirmation",autocomplete: "new-password", class: "w-full bg-gray-100 p-2"  %>
      </div>

     <button class="bg-slate-700 hover:bg-slate-400 text-white font-bold py-2 px-4 m-3 rounded">  
        <%= f.submit "Sign up" %>
      </button>
    <% end %>
    
    <%= render "devise/shared/links" %>
    
  </div>
</section>